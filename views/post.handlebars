<main class="container container-fluid mt-5">

  <div class="text-center">
    <h2>{{title}}</h2>
    <p>{{{get_emoji}}}</p>
    <p>{{content}}</p>
    <p class="pb-1">Created by {{user.name}} on {{format_date date_created}}</p>

    {{#if logged_in}}
      <button class="btn btn-primary mb-4" id="new-comment-btn">Add Comment</button>

      <div class="row mt-4" id="add-comment">
        <div class="col-12">
          <form class="form new-comment-form">
            <div class="form-group">
              <label for="comment-desc">Comment:</label>
              <textarea
                class="form-input w-75 m-auto"
                id="comment-desc"
                name="comment-desc"
              ></textarea>
            </div>

            <div class="form-group">
              <button
                type="submit"
                class="btn btn-primary submit-comment-btn"
              >Submit</button>
            </div>
          </form>
        </div>
      </div>
    {{/if}}

    <div class="border-top border-light p-4">
      <h4>Comments: </h4>

      {{#each comments as |comment|}}
        <div class="row mb-4 post">

          <div class="col-md-5">
            <p>
              <span class="text-white">{{comment.user.name}}</span>

              <span class="text-white-50 comment-date">{{format_date
                  comment.date_created
                }}</span>
            </p>
          </div>

          <div class="col-md-7">
            <p>
              {{comment.content}}
            </p>
          </div>

        </div>
      {{/each}}
    </div>

  </div>

</main>

<script src="/js/post.js"></script>